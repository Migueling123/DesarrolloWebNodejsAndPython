<div class="row">
    {{#each notes}}
    <div class="card m-3" style="width:300px;">
        <div class="card-header">
            <a href="#">
            <h3 class="card-title text-center text-uppercase">
                {{title}}
            </h3>
        </a>
        </div>        
        <div class="card-body">
            <p><h6>Description</h6> {{description}}</p>
            <p><h6>Create date</h6> {{timeago date}}</p>            
        </div>
        <div class="card-footer text-center">
            <div class="btn-group btn-group-sm ">
                <a href="/notes/data/{{id}}" style="" class="btn btn-outline-danger btnDelete" id="">Delete</a>
                <a href="/notes/data/{{id}}" class="btn btn-outline-success btnUpdate" id="">Edit</a>
            </div>
        </div>
    </div>
    {{/each}}

          <div class="card m-3" style="width:200px;">
            <div class="card-header text-center">
                Notes
            </div>
            <div class="card-body text-center">
                <h3>There isn't notes!</h3>
                <a href="/notes/data/1" class="btn btn-outline-primary" id="btnCreate">Create</a>
            </div>
        </div>
      
</div>






<div class="modal fade" id="myModal" tabindex="-1" role="dialog"  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="titleModal">New note!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="seccionRecargar">
            
        </div>
        
          <form>
                <div class="form-group">
                    <input type="text" name="title" placeholder="Title" class="form-control"  autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Description"></textarea>
                </div>
                {{!-- <div class="form-group">
                    <button class="btn btn-outline-success btn-block" >
                        Create
                    </button>
                </div>            --}}
          </form>        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="btnGuardar">Save</button>
      </div>
    </div>
  </div>
</div>